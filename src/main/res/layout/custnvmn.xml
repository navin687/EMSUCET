<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:layout_width="80dp"
                    app:cardCornerRadius="40dp"
                    android:layout_gravity="center"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:background="@drawable/group"
                        android:layout_height="match_parent" />

                </android.support.v7.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:weightSum="8"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Administrator"
                        android:textColor="@color/black"
                        android:fontFamily="@font/latoregular"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textSize="15sp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Sathya@Tech"
                        android:textSize="13sp"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center|left"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_weight="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:id="@+id/navpro"
                android:orientation="horizontal"
                android:layout_weight="1">




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:weightSum="10"
                    android:id="@+id/navproc"
                    android:background="@drawable/ripplebtn"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:backgroundTint="@color/thmvmenuclr"
                            android:background="@drawable/man_user"
                            android:layout_height="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:fontFamily="@font/latoregular"
                            android:textStyle="bold"
                            android:gravity="center|left"
                            android:textSize="16sp"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>




            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:id="@+id/navlog"
                android:orientation="horizontal"
                android:layout_weight="1">




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:weightSum="10"
                    android:id="@+id/navlogc"
                    android:background="@drawable/ripplebtn"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:backgroundTint="@color/thmvmenuclr"
                            android:background="@drawable/logout"
                            android:layout_height="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Logout"
                            android:textColor="@color/black"
                            android:fontFamily="@font/latoregular"
                            android:textStyle="bold"
                            android:gravity="center|left"
                            android:textSize="16sp"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
</android.support.constraint.ConstraintLayout>